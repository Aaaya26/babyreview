<h2 class="sign-up-title">Sign up</h2>

<%= form_with model:@user, url: user_registration_path,class: "registration-main", local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">名前</label>
    </div>
    <%= f.text_area :name, class:"input-default", id:"name", placeholder:"10文字以内で入力してください", maxlength:"10" %>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">メールアドレス</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">パスワード</label>
    </div>
    <%= f.password_field :password,  class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">確認用パスワード</label>
    </div>
    <%= f.password_field :password_confirmation,class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1970,
                    end_year: (Time.now.year - 10),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お子様の生年月日</label>
      <span class="indispensable">任意</span>
    </div>
  <div class='input-birth-wrap'>
    <%= raw sprintf(
                f.date_select(
                  :child_birthday,
                  class:'select-birth',
                  id:"birth-date",
                  use_month_numbers: true,
                  prompt:'--',
                  start_year: 2015,
                  end_year: (Time.now.year),
                  date_separator: '%s'),
                "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Start Baby Review!", class:"registration-btn" %>
    </div>

<% end %>

<%= render "devise/shared/links" %>